<div data-role="page" id="matchday-page" class="matchday-page" data-dom-cache="true"
     <%= "data-prev=\"#{pages_path(:uri => @matchdays[@current_index-1].last.first.first)}\"".html_safe if @current_index > 0 %>
     <%= "data-next=\"#{pages_path(:uri => @matchdays[@current_index+1].last.first.first)}\"".html_safe if @matchdays.count >= @current_index+2 %>>
  <div class="swatch">
    <div class="ui-header ui-bar-a" data-swatch="a" data-theme="a" data-form="ui-bar-a" data-role="header" role="banner">
      <a class="ui-btn-left ui-btn-corner-all ui-btn ui-icon-home ui-btn-icon-notext " title=" Home " data-form="ui-icon" data-role="button" role="button">
        Home </a>

      <h1 class="ui-title" tabindex="0" role="heading" aria-level="1">FIFA WM 2014</h1>
      <a class="ui-btn-right ui-btn-corner-all ui-btn ui-icon-grid ui-btn-icon-notext " title=" Navigation " data-form="ui-icon" data-role="button" role="button">
        Navigation </a>
    </div>

    <div class="ui-content ui-page-theme-a page" data-form="ui-page-theme-a" data-theme="a" role="main">

      <ul data-role="listview" data-inset="true" class="ui-listview ui-listview-inset ui-corner-all">
        <li data-role="list-divider" data-theme="a" data-swatch="a" data-form="ui-bar-a" role="heading">
          <div class="big center"><%= @matchday.last.select { |t| t[1].eql?("time") }.first.last.to_s(:db) %> Uhr</div>
        </li>
        <li data-form="ui-body-a" data-swatch="a" data-theme="a">
          <div class="big center">
            <a href="<%= pages_path(:uri => "team_"+@matchday.last.select { |t| t[1].eql?("team1") }.first.last) %>" class="img">
              <img src="<%= @matchday.last.select { |t| t[1].eql?("team1_icon") }.first.last %>" height="40" alt="Team 1"/>
            </a>
            <a href="<%= pages_path(:uri => "team_"+@matchday.last.select { |t| t[1].eql?("team2") }.first.last) %>" class="img">
              <img src="<%= @matchday.last.select { |t| t[1].eql?("team2_icon") }.first.last %>" height="40" alt="Team 2"/>
            </a>
            <br/>

            <%= @matchday.last.select { |t| t[1].eql?("team1") }.first.last %>
            - <%= @matchday.last.select { |t| t[1].eql?("team2") }.first.last %>

          </div>

        </li>
        <li>
          <a class="ui-btn-a ui-btn ui-btn-icon-right ui-icon-carat-r" data-form="ui-btn-up-a" data-swatch="a" data-theme="a"
             href="<%= pages_path(:uri => "team_"+@matchday.last.select { |t| t[1].eql?("team1") }.first.last) %>">
            <%= @matchday.last.select { |t| t[1].eql?("stadium") }.first.last %>
            (<%= @matchday.last.select { |t| t[1].eql?("city") }.first.last %>)</a></li>
      </ul>


    </div>
  </div>


  <!-- /content -->
</div>